using Microsoft.AspNetCore.Mvc;
using HelpCasa.Data;
using HelpCasa.Models;
using Microsoft.EntityFrameworkCore;

namespace HelpCasa.Controllers
{
    /// <summary>
    /// Controller responsável pela funcionalidade de pesquisa.
    /// </summary>
    [Route("api/[controller]")]
    [ApiController]
    public class SearchController : ControllerBase
    {
        private readonly ApplicationDbContext _context;

        /// <summary>
        /// Construtor da classe SearchController, responsável pela injeção de dependência do contexto de banco de dados.
        /// </summary>
        /// <param name="context">O contexto de banco de dados injetado.</param>
        public SearchController(ApplicationDbContext context)
        {
            _context = context;
        }


        [HttpGet("search")]
        public async Task<IActionResult> Search([FromQuery] string? title, [FromQuery] decimal? price, [FromQuery] DateTime? date)
        {
            // Base da consulta
            var query = _context.Items.AsQueryable();

            // Adiciona filtros dinamicamente
            if (!string.IsNullOrEmpty(title))
            {
                query = query.Where(i => i.Title.Contains(title));
            }

            if (price.HasValue)
            {
                query = query.Where(i => i.Price == price);
            }

            if (date.HasValue)
            {
                query = query.Where(i => i.CreatedDate.Date == date.Value.Date);
            }

            // Executa a consulta
            var results = await query.ToListAsync();

            return Ok(results);
        }
    }
}